{
  "name": "create-typescript-lib",
  "version": "1.0.0",
  "description": "Typescript library quickstart project",
  "main": "lib/index.js",
  "scripts": {
    "start": "nodemon --watch 'src/' --ext 'ts,json' --exec 'npm run node'",
    "node": "NODE_PATH=. ts-node src/index",
    "build": "tsc --build",
